<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>
    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!-- Event ListItem Styles -->
    <style name="EventListTitle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="EventListSubtitle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="BoldPrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>

    <style name="SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>

    <!-- Filter List -->
    <style name="FilterListTitle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="FilterListSubtitle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="EditFilterIcon">
        <item name="android:layout_width">@dimen/image_small</item>
        <item name="android:layout_height">@dimen/image_small</item>
        <item name="android:tint">@color/icon_tint_gray</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
    </style>

    <style name="AppTheme.WhiteTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
